template {
  background-color: #f6f6f6;
}
.page {
  padding: 2vw 5vw;
  background-color: #f6f6f6;
  height: 100vh;
}
.news_list {
  background-color: #fff;
  width: 90vw;
  height: 38vw;
  margin: 0 0 10rpx 0;
  border-radius: 20rpx;
}
.news {
  padding: 20rpx 30rpx;
  font-size: 32rpx;
}
.news .title {
  font-size: 40rpx;
  font-weight: bold;
  white-space: nowrap;
  /* 超出范围隐藏 */
  overflow: hidden;
  /* 文字超出用省略号 */
  text-overflow: ellipsis;
  margin-bottom: 30rpx;
}
.news .content {
  /* 超出范围隐藏 */
  overflow: hidden;
  /* 文字超出用省略号 */
  text-overflow: ellipsis;
  /* 盒子模型 */
  display: -webkit-box;
  /* 显示的文本行数 */
  -webkit-line-clamp: 3;
  /* 子元素的垂直排列方式 */
  -webkit-box-orient: vertical;
  line-height: 48rpx;
}
